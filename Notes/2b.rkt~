;; The first three lines of this file were inserted by DrRacket. They record metadata
;; about the language level of this file in a form that our tools can easily process.
#reader(lib "htdp-beginner-reader.ss" "lang")((modname 2b) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f () #f)))
(require 2htdp/image)
(require 2htdp/universe)

;; What is the sign of the given number n?
(define (sign n)
  (cond
    [(> n 0) "positive"]
    [(< n 0) "negative"]
    [(= n 0) "zero"]
    )
  )

;; Sign function call
(sign -5)
;; Lets make the sun set, and darken the sky as it sets

(define SUN (circle 30  "solid" "yellow"))
(define SKY (rectangle 300 400 "solid" "lightblue"))
(define X 150)
(define Y 50)

(define (sunset t)
  (place-image SUN X (+ Y t) SKY)
 )

(animate sunset)